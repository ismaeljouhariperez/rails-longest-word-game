

<div class="game-container text-center p-4 bg-white">
    <h1 class="mb-3">New Game</h1>
    <div class="letter-boxes mb-4">
      <% @letters.each do |letter| %>
        <div class="letter-box"><%= letter %></div>
      <% end %>
    </div>
    <form class="input-area" action="/score" method="post" data-turbo="false">
      <label for="word-input">What is the longest word you can find?</label>
      <input type="text" name="word">
      <input type="submit" value="Send" class="btn btn-primary">
      // inpout hidden
      <%= hidden_field_tag 'letters', @letters %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>
</div>
